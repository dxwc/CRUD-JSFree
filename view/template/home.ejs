<?- include('./common/layout_pre.ejs', { title : 'প্রথম পাতা', name : locals.name }) ?>
<span class='content'>
<? if(locals.posts && posts.constructor === Array && posts.length) { ?>
<? if(locals.page && typeof(page) === 'number') { ?>
    <h3>নতুন লেখাগুলো উপরের দিকে</h3>
<? } ?>
<? posts.forEach((p) => { ?>
<div class='post'>
    <p>
        <span class='count'>
            <a href='/post/<?= p.id ?>'>
            <?= p.replies ?><sub>টা মতামত</sub>
            </a>
        </span>
        <a href='/post/<?= p.id ?>'>
            <?- p.content ?>
        </a>
    </p>
    <span class='meta_info'>
        লিখেছে <a href='/user/<?= p.by ?>'><?= p.by ?></a>
        <?= p.createdAt ?>
    </span>
    <a class='readmore' href='/post/<?= p.id ?>'>পড়ুন »</a>
</div>

<? }); ?>
<? } else { ?>
<h6>আর কোনো লেখার লিংক এখানে নেই</h6>
<? } ?>

<? if(locals.page && typeof(page) === 'number') { ?>
    <span class='meta_info'>
        <? if(page > 1) { ?>
            <a href='/?new=true&page=<?= page - 1 ?>'>« পেছনের পাতা</a>
        <? } ?>
        <?= locals.page ?>
        <? if(locals.posts && locals.posts.length) { ?>
            <a href='/?new=true&page=<?= page + 1 ?>'>পরের পাতা »</a>
        <? } ?>
    </span>
<? } ?>
</span>
<?- include('./common/layout_post.ejs') ?>