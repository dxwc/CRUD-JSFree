<?- include('./common/layout_pre.ejs', { title : 'জবাব/মতামত', name : locals.name }) ?>
<? if(locals.id && locals.post_id && locals.content) { ?>
<span class='content'>
    <p><?- content ?></p>
    <a href='/post/<?= post_id ?>#<?= id ?>'>মতামত লিংক</a>
</span>
<? } ?>
<form method='POST' action='/reply_to/<?= locals.id ?>'>
    <div>
        <label for='comment_w'>আপনার জবাব বা মতামত লিখুন:</label>
    </div>
    <div>
        <textarea
            name='comment_w'
            type='text'
            placeholder='...'
            minlength='1'
            autocomplete='off'
            required><? if(locals.comment_w){ ?><?= comment_w ?><? } ?></textarea>
    </div>
    <? if(locals.info) { ?>
        <div class='meta_info warn_text'>
            <?= info ?>
        </div>
    <? } ?>
    <button class='submit' type='submit'>পাঠান</button>
</form>
<?- include('./common/layout_post.ejs') ?>